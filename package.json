{
  "name": "convoker",
  "version": "0.3.3",
  "description": "A simple, type safe CLI framework for TypeScript.",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/trailfrost/convoker"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./command": {
      "types": "./dist/command.d.ts",
      "import": "./dist/command.js"
    },
    "./input": {
      "types": "./dist/types.d.ts",
      "import": "./dist/input.js"
    },
    "./color": {
      "types": "./dist/color.d.ts",
      "import": "./dist/color.js"
    },
    "./prompt": {
      "types": "./dist/prompt/index.d.ts",
      "import": "./dist/prompt/index.js"
    },
    "./prompt/raw": {
      "types": "./dist/prompt/raw.d.ts",
      "import": "./dist/prompt/raw.js"
    },
    "./error": {
      "types": "./dist/error.d.ts",
      "import": "./dist/error.js"
    }
  },
  "type": "module",
  "scripts": {
    "test": "vitest tests",
    "build": "tsc -b tsconfig.app.json && tsc-alias -p tsconfig.app.json",
    "format": "prettier --check .",
    "format!": "prettier --write .",
    "lint": "eslint .",
    "lint!": "eslint --fix ."
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "cli",
    "command",
    "args",
    "argv",
    "option"
  ],
  "author": "trailfrost",
  "license": "MIT",
  "packageManager": "pnpm@10.18.3",
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "eslint": "^9.36.0",
    "globals": "^16.4.0",
    "prettier": "^3.6.2",
    "tsc-alias": "^1.8.16",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.45.0",
    "valibot": "^1.1.0",
    "vitest": "^3.2.4"
  }
}
